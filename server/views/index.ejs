<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/styles.css">
  <script src="https://use.fontawesome.com/b828bf247e.js"></script>
  <title>W.S. Marina</title>
</head>

<body>
  <div id="container">
    <video autoplay loop muted>
      <source src="/videos/login-background.mp4" type="video/mp4">
    </video>

    <div class="main">
      <section class="form">
        <form action="/login" method="post">
          <button disabled><i class="fa fa-ship" aria-hidden="true"></i></button>
          <br><br>

          <input id="login-email" name="email" placeholder="Email">
          <br><br>

          <input id="login-password" name="password" type="password" placeholder="Password">
          <br><br>

          <button>Sign In</button><button class="switch-to-signup" disabled>Sign Up</button>
        </form>
      </section>

      <section class="form" style="display:none;">
        <form action="/register" method="post">
          <button disabled><i class="fa fa-ship" aria-hidden="true"></i></button>
          <input id="register-username" name="username" placeholder="Username">
          <br><br>

          <input id="register-email" name="email" placeholder="Email">
          <br><br>

          <input id="register-password" name="password" type="password" placeholder="Password">
          <br><br>
          
          <input id="register-password_confirmation" name="password_confirmation" type="password" placeholder="Confirm Password">
          <br><br>

          <input id="register-date_of_birth" name="date_of_birth" type="date">
          <br><br>

          <button class="switch-to-signin" disabled>Sign In</button><button>Sign Up</button>
        </form>
      </section>
    </div>
  </div>
</body>

</html>
